<Page
    x:Class="DotNetTechnology.PageUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DotNetTechnology"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlChromeHighAcrylicWindowMediumBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbHello" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50pt">Hello Someone</TextBlock>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btExit" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="30pt" Style="{StaticResource ButtonRevealStyle}">Exit</Button>
            <Button x:Name="btBack" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="30pt" Style="{StaticResource ButtonRevealStyle}">Back</Button>
        </Grid>
    </Grid>
</Page>
